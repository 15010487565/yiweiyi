<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--应用的主要色调,actionBar默认使用该颜色,Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 应用的主要暗色调,statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--一般控件的选中效果默认采用该颜色-->
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <!--无title dialog  透明背景-->
    <style name="NoTitleDialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textview_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color646464</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!--窗体底部弹出位移动画-->
    <style name="dialog_translate_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in_translate_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_translate_anim</item>
    </style>
    <!--窗体中心缩放+透明度渐变动画-->
    <style name="dialog_scale_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="Popanim">
        <item name="android:windowEnterAnimation">@anim/pop_show_xiala_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_xiala_anim</item>
    </style>
    <style name="TabSize15">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="TabSize16">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TabSize17">
        <item name="android:textSize">17dp</item>
    </style>
    <style name="TabSize18">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AnimTools" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>
    <declare-styleable name="SanJiaoView">
        <attr name="sjv_resolutionWidth" format="dimension" />
        <attr name="sjv_resolutionHeight" format="dimension" />
        <attr name="sjv_color" format="color" />
        <attr name="sjv_direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="right" value="2" />
            <enum name="left" value="3" />
        </attr>
    </declare-styleable>
    <!--底部弹框动画-->
    <style name="bottomDialog">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>
</resources>