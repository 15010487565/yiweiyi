<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/compe_name_tv" />

    <TextView
        android:id="@+id/compe_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintLeft_toRightOf="@id/head_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/principal_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/principal_"
        android:textColor="@color/color535353"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/compe_name_tv"
        app:layout_constraintTop_toBottomOf="@id/compe_name_tv" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color535353"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/principal_"
        app:layout_constraintTop_toTopOf="@id/principal_" />

    <TextView
        android:id="@+id/phone_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/phone_"
        android:textColor="@color/color535353"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/principal_"
        app:layout_constraintTop_toBottomOf="@id/principal_" />

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/color0582FA"
        android:textSize="15sp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/phone_"
        app:layout_constraintTop_toTopOf="@id/phone_" />

    <TextView
        android:id="@+id/more_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/more_number"
        android:textColor="@color/colorFF7D18"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/phone_tv"
        app:layout_constraintTop_toTopOf="@id/phone_" />


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/color535353"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/phone_"
        app:layout_constraintTop_toBottomOf="@id/phone_" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/color535353"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/compe_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/compe_name_tv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorEAEAEA"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>